				<th>Name</th>
				<th>Price</th>
				<th class="manage"></th>
			</tr>
		</thead>
		<tbody>
			{% for permit in permits %}
			<tr>
				<td><a href="{{ link.edit }}{{ permit.id }}">{{ permit.name }}</a></td>

<div class="wrap wrap--as">
	<div class="as-notification"></div>

	<header>
		<h1>Edit: {{ permit.name }} (#{{ permit.id }})</h1>
	</header>

	<form class="container" id="permits" action="" method="POST">
		<div class="content">
			<div class="section-header">
				<h4>Permit Information</h4>
			</div>

			<p>
				<label for="title">Name</label>
				<input type="text" name="title" placeholder="Enter a Name" value="{{ permit.name }}">
			</p>
			<p>
				<label for="price">Price</label>
				<input type="text" name="price" placeholder="Enter a price" value="{{ permit.price }}">
			</p>

			<input type="hidden" name="action" value="permit_update">
			<input type="hidden" name="id" value="{{ permit.id }}">
		</div>	

		<aside class="sidebar">
			<div class="sidebar__item">
				<div class="section-header">
					<h4>Update</h4>
				</div>

				<p><button type="submit" class="button">Save</button> {{ button.delete | raw }}</p>
			</div>
		</aside>
	</form>
</div>
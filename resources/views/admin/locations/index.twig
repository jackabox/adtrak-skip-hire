{% include 'admin/partials/header.twig' %}

	<header>
		<h1>Locations</h1>
		<a href="{{ link.add }}" class="button action">Add New Location</a>
	</header>

	<table class="as-table as-table__locations">
		<thead>
			<tr>
				<th>Name</th>
				<th>Lat</th>
				<th>Lng</th>
				<th>Radius</th>
				<th class="manage"></th>
			</tr>
		</thead>
		<tbody>
			{% for loc in locations %}
			<tr>
				<td><a href="{{ link.edit }}{{ loc.id }}">{{ loc.name }}</a></td>
				<td>{{ loc.lat }}</td>
				<td>{{ loc.lng }}</td>
				<td>{{ loc.radius }}</td>
				<td>
					<a href="{{ link.edit }}{{ loc.id }}">Manage</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	
{% include 'admin/partials/footer.twig' %}

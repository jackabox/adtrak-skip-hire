{% include 'admin/partials/header.twig' %}

	<header class="ad-header">
		<h1>Edit: {{ location.name }} (#{{ location.id }})</h1>
	</header>

	<form class="ad-form" id="locations" action="" method="POST">
		<div class="section-header">
			<h4>Location Information</h4>
		</div>

		<p>
			<label for="title">Name</label>
			<input type="text" name="title" placeholder="Enter a Name for the Location" value="{{ location.name }}">
		</p>

		<p>
			<label for="description">Description</label>
			<textarea name="description" placeholder="Enter a Description">{{ location.description }}</textarea>
		</p>

		<p>
			<label for="location">Location</label>
			<input type="text" name="location" id="as_location" placeholder="Enter a Post Code" value="{{ location.address }}">
			<div id="map"></div>
			<input type="hidden" name="as_lat" id="as_lat" value="{{ location.lat }}">
			<input type="hidden" name="as_lng" id="as_lng" value="{{ location.lng }}">
		</p>

		<p>
			<label for="radius">Radius</label>
			<input type="number" name="radius" placeholder="Enter a Delivery Radius" value="{{ location.radius }}">
		</p>

		<input type="hidden" name="action" value="location_update">
		<input type="hidden" name="id" value="{{ location.id }}">
		
		<p><button type="submit" class="ad-button">Save</button> {{ button.delete | raw }}</p>
	</form>
	
{% include 'admin/partials/footer.twig' %}

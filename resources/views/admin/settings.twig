{% include 'admin/partials/header.twig' %}

	<header class="ad-header">
		<h1>Settings</h1>
	</header>

	<form class="ad-grid ad-form" action="" method="POST">
		<div class="content">
			<div class="ad-box">
				<div class="section-header">
					<h4>General Settings</h4>
				</div>

				<p>
					<label for="gmaps_api">Google Maps API Key</label>
					<input type="text" name="gmaps_api" value="{{ options.gmaps_api }}">
				</p>
		
				<input type="hidden" name="action" value="settings_save">
			</div>
			<div class="ad-box">
				<div class="section-header">
					<h4>Payment Settings</h4>
				</div>

				<div class="ad-form-row ad-form-row--inline">
					<label for="paypal_client_id">PayPal Client ID</label>
					<div><input type="text" name="paypal_client_id" value=""></div>
				</div>

				<p>
					<label for="paypal_client_secret">PayPal Client Secret</label>
					<input type="text" name="paypal_client_secret" value="">
				</p>

				<p>
					<label for="paypal_invoice_message">PayPal Invoice Message</label>
					<input type="text" name="paypal_client_id" value="">
				</p>

				<p>
					<label for="paypal_sandbox_mode">Enable PayPal Sandbox?</label>
					<input type="text" name="paypal_sandbox_mode" value="">
				</p>
		
				<input type="hidden" name="action" value="settings_save">
			</div>
			<p><button type="submit" class="ad-button ad-button--orange">Save</button></p>
		</div>	

		<aside class="sidebar">
			<div class="sidebar__item ad-box">
				<div class="section-header">
					<h4>Helpers</h4>
				</div>

				<p>Need Help? This would be the helper text for admins setting it up</p>
			</div>
		</aside>
	</form>

{% include 'admin/partials/footer.twig' %}

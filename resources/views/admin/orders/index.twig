{% include 'admin/partials/header.twig' %}

	<header class="ad-header">
		<h1>Orders</h1>
	</header>

	{% if orders %}
	<table class="ad-table ad-table__orders">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Details</th>
				<th>Order Date</th>
				<th>Delivery Date</th>
				<th>Total (Â£)</th>				
				<th class="manage"></th>
			</tr>
		</thead>
		<tbody>
			{% for order in orders %}
			<tr>
				<td><a href="{{ link.edit }}{{ order.id }}">{{ order.id }}</a></td>
				<td><a href="{{ link.edit }}{{ order.id }}">{{ order.forename }} {{ order.surname }}</a></td>
				<td>
					<span>Skip: </span> <br><span>Permit: </span>
				</td>
				<td>{{ order.created_at }}</td>
				<td>{{ order.delivery_date }}</td>
				<td>{{ order.total }}</td>				
				<td>
					<a href="{{ link.edit }}{{ order.id }}" class="ad-button">Manage</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	{% else %}
	<p>No Orders Placed</p>
	{% endif %}

{% include 'admin/partials/footer.twig' %}
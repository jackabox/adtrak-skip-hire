{% include 'partials/header.twig' %}

	<header class="ad-header">
		<h1>Edit: {{ permit.name }} (#{{ permit.id }})</h1>
	</header>

	<form class="ad-form" id="permits" action="" method="POST">
		<div class="content">
			<div class="ad-form-row ad-form-row--inline">
				<label for="title">Name</label>
				<div><input type="text" name="title" placeholder="Enter a Name" value="{{ permit.name }}"></div>
			</div>
			<div class="ad-form-row ad-form-row--inline">
				<label for="price">Price</label>
				<div><input type="number" name="price" placeholder="Enter a price" value="{{ permit.price }}"></div>
			</div>

			<input type="hidden" name="action" value="permit_update">
			<input type="hidden" name="id" value="{{ permit.id }}">

			<div class="ad-form-row ad-form-row--inline">
				<label>&nbsp;</label>
				<div><button type="submit" class="ad-button ad-button--orange">Save</button></div>
			</div>
		</div>
	</form>

{% include 'partials/footer.twig' %}